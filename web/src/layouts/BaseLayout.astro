---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
}

const {
  title = "The Growth Marketing Canvas",
  description = "Define a 12‑month actionable, customer‑centric growth plan. Used by 2,000+ companies worldwide.",
  ogImage = "/images/Growth-marketing-canvas_A1_V19_thumbnail.webp",
  canonical,
} = Astro.props as Props;

// Build a default canonical URL if none is passed and site is configured
const site = Astro.site?.href?.replace(/\/$/, "") || undefined;
const canonicalUrl = canonical || (site ? `${site}${Astro.url.pathname}` : undefined);
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
  <meta name="robots" content="index, follow" />
  <meta name="theme-color" content="#f97316" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
  {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="The Growth Marketing Canvas" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />
    <link rel="icon" type="image/png" sizes="32x32" href="/madkings-favicon.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/madkings-favicon.png" />
    <link rel="apple-touch-icon" href="/madkings-favicon.png" />
  </head>
  <body class="min-h-screen antialiased text-gray-900">
    {canonicalUrl && (
      <script type="application/ld+json">
        {JSON.stringify({
          '@context': 'https://schema.org',
          '@type': 'Organization',
          name: 'The Growth Marketing Canvas',
          url: canonicalUrl,
          logo: '/madkings-favicon.png',
          sameAs: [
            'https://www.madkings.com/',
            'https://www.linkedin.com/in/totophe/'
          ]
        })}
      </script>
    )}
    {canonicalUrl && (
      <script type="application/ld+json">
        {JSON.stringify({
          '@context': 'https://schema.org',
          '@type': 'WebSite',
          name: 'The Growth Marketing Canvas',
          url: canonicalUrl,
          potentialAction: {
            '@type': 'SearchAction',
            target: `${canonicalUrl}?q={search_term_string}`,
            'query-input': 'required name=search_term_string'
          }
        })}
      </script>
    )}
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:m-2 focus:rounded focus:bg-white focus:px-3 focus:py-2 focus:shadow"
      >Skip to content</a
    >
    <main id="main"><slot /></main>
  </body>
</html>
